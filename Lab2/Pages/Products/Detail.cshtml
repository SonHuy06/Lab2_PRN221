@page
@model Lab2.Pages.Products.DetailModel
@using Lab2.DataAccess.Models
@{
    ViewData["Title"] = "Detail";
}

<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>


    @{
        Product p = Model.Product;
    }


    <h4>Product Detail</h4>

    <section class="container-fluid">

        <div class="row d-flex flex-column">

            <div class="col">
                <div class=" row d-flex">

                    <div class="col-6">
                        Product Name:
                    </div>

                    <div class="col-6">
                        @p.ProductName
                    </div>

                </div>
            </div>

            <div class="col">
                <div class=" row d-flex">

                    <div class="col-6">
                        Supplier:
                    </div>

                    <div class="col-6">
                        @p.Supplier.CompanyName
                    </div>

                </div>
            </div>

            <div class="col">
                <div class=" row d-flex">

                    <div class="col-6">
                        Category:
                    </div>

                    <div class="col-6">
                        @p.Category.CategoryName
                    </div>

                </div>
            </div>

            <div class="col">
                <div class=" row d-flex">

                    <div class="col-6">
                        Quantity per unit:
                    </div>

                    <div class="col-6">
                        @p.QuantityPerUnit
                    </div>

                </div>
            </div>

            <div class="col">
                <div class=" row d-flex">

                    <div class="col-6">
                        Unit in stock:
                    </div>

                    <div class="col-6">
                        @p.UnitsInStock
                    </div>

                </div>
            </div>

            <div class="col">
                <div class=" row d-flex">

                    <div class="col-6">
                        Unit in order:
                    </div>

                    <div class="col-6">
                        @p.UnitsOnOrder
                    </div>

                </div>
            </div>



        </div>

    </section>

</body>
</html>